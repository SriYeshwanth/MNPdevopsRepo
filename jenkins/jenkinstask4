
 
pipeline {
    agent any
    
    stages {
        stage('User Input and Validation') {
            steps {
                sh '''
                    read -p "Please enter a number: " userInput
                    if [[ $userInput =~ ^[0-9]+$ ]]; then
                        echo "You entered a valid number: $userInput"
                    else
                        echo "Invalid input. Please enter a valid number."
                        exit 1
                    fi
                '''
            }
        }
    }
}
