pipeline {
    agent any

    stages {
        stage('Validation') {
            steps {
                script {
                     sh '''
echo "hello ${USER}"

if [ ${USER} == '^[A-Z][a-z]$' ]
then
echo " good to enter ${USER} "
else
echo "not good to enter ${USER}"
fi
'''
                }
                }
            }
        }
    }
