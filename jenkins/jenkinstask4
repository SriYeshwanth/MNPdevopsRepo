pipeline {
    agent any

    stages {
        stage('Validation') {
            steps {
                script {
                     sh '''

                    if (${USER} == 'sri') ;
                    then 
                        echo "Welcome Mr. ${USER}"
                     else 
                        error "Invalid username. Please enter 'sri'."
                   '''
                   
                  }
                }
            }
        }
    }
