
 
pipeline {
    agent any
    
    stages {
        stage('User Input and Validation') {
            steps {
                sh '''
                    "Please enter a number: " ${USER}
                    if [[ ${USER}=~ ^[0-9]+$ ]]; then
                        echo "You entered a valid number: ${USER}"
                    else
                        echo "Invalid input. Please enter a valid number."
                        exit 1
                    fi
                '''
            }
        }
    }
}
